{
    "openapi": "3.0.1",
    "info": {
        "version": "v1.0",
        "title": "Mansfield Energy - Security",
        "description": "OAuth 2.0 Client Credential Flow through Azure AD B2C",
        "contact": {
            "name": "Jeremy Kent",
            "email": "jkent@mansfieldoil.com"
        }
    },
    "servers": [
        {
            "url": "https://{{tenantName}}.b2clogin.com/{{tenantName}}.onmicrosoft.com/b2c_1_signin",
            "description": "Replace the tenantName with the Staging or Production tenant name shared by Mansfield"
        }
    ],
    "paths": {
        "/oauth2/v2.0/token": {
            "get": {
                "summary": "Token",
                "description": "Retrieve the client access token",
                "requestBody": {
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "grant_type": {
                                        "type": "string",
                                        "description": "client_credentials"
                                    },
                                    "client_id": {
                                        "type": "string",
                                        "description": "The clientID configured in Azure AD B2C (GUID)"
                                    },
                                    "client_secret": {
                                        "type": "string",
                                        "description": "The client secret generated in Azure AD B2C (GUID)"
                                    },
                                    "scope": {
                                        "type": "string",
                                        "description": "The Application ID URI with defined roles"
                                    }
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "example": {
                                    "access_token": "eyJ0eX..",
                                    "token_type": "Bearer",
                                    "not_before": 1664974488,
                                    "expires_in": 3600,
                                    "expires_on": 1664978088,
                                    "resource": "9fbd3ab8-ff.."
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "access_token": {
                                            "type": "string",
                                            "description": "Token to use in the Authorization Header for Mansfield API access"
                                        },
                                        "token_type": {
                                            "type": "string",
                                            "description": "Bearer"
                                        },
                                        "not_before": {
                                            "type": "number"
                                        },
                                        "expires_in": {
                                            "type": "integer",
                                            "description": "Length of time (seconds)"
                                        },
                                        "expires_on": {
                                            "type": "number"
                                        },
                                        "resource": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "example": {
                                    "error": "invalid_request",
                                    "error_description": "The request is missing required parameter: grant_type"
                                },
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        },
                                        "error_description": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}